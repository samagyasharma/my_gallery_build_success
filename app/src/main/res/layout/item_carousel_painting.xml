<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Painting Image -->
        <ImageView
            android:id="@+id/paintingImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="Painting preview"/>

        <!-- Painting Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Painting Name -->
            <TextView
                android:id="@+id/paintingName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#800080"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/caveat"/>

            <!-- Artist Name -->
            <TextView
                android:id="@+id/paintingArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Price -->
            <TextView
                android:id="@+id/paintingPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#800080"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <!-- Medium -->
            <TextView
                android:id="@+id/paintingMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#666666"
                android:background="@drawable/rounded_tag_background"
                android:padding="4dp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
