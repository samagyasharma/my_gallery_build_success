<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFF5EB">

    <com.example.my_application.MovingBackgroundView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Featured Image -->
    <ImageView
        android:id="@+id/featuredImage"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:src="@drawable/header"
        android:scaleType="centerCrop" />

    <!-- Featured Paintings Carousel -->
    <HorizontalScrollView
        android:id="@+id/featuredCarousel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/featuredImage"
        android:paddingHorizontal="4dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/carouselContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- First Image with Text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="4dp">

                <FrameLayout
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:background="@drawable/circle_background"
                    android:elevation="12dp"
                    android:translationZ="6dp"
                    android:stateListAnimator="@null"
                    android:outlineAmbientShadowColor="#000000"
                    android:outlineSpotShadowColor="#000000"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:src="@drawable/painting"
                        android:scaleType="centerCrop"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Featured Paintings"
                    android:textSize="14sp"
                    android:textColor="#800080"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/caveat"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Second Image with Text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="4dp">

                <FrameLayout
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:background="@drawable/circle_background"
                    android:elevation="4dp">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:src="@drawable/artist_is"
                        android:scaleType="centerCrop"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Featured Artist"
                    android:textSize="14sp"
                    android:textColor="#800080"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/caveat"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Third Image with Text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="4dp">

                <FrameLayout
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:background="@drawable/circle_background"
                    android:elevation="4dp">

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:src="@drawable/display_your"
                        android:scaleType="centerCrop"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Display Yours!"
                    android:textSize="14sp"
                    android:textColor="#800080"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/caveat"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Grid View for Paintings -->
    <GridView
        android:id="@+id/paintingsGridView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/featuredCarousel"
        android:layout_above="@id/bottomNavigation"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:horizontalSpacing="0dp"
        android:numColumns="1"
        android:padding="8dp"
        android:paddingBottom="72dp"
        android:clipToPadding="false"
        android:verticalSpacing="16dp" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/toteBagLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/toteBagButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Bag"
                android:textColor="#800080"
                android:textSize="14sp"
                android:fontFamily="@font/caveat"
                android:padding="4dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_tote_bag"
                android:layout_marginStart="4dp"
                android:tint="#800080"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#800080"
            android:alpha="0.3"
            android:layout_marginHorizontal="16dp"/>

        <LinearLayout
            android:id="@+id/aboutMeLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/aboutMeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Me"
                android:textColor="#800080"
                android:textSize="14sp"
                android:fontFamily="@font/caveat"
                android:padding="4dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_about_me"
                android:layout_marginStart="4dp"
                android:tint="#800080"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#800080"
            android:alpha="0.3"
            android:layout_marginHorizontal="16dp"/>

        <LinearLayout
            android:id="@+id/contactLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/contactButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Me"
                android:textColor="#800080"
                android:textSize="14sp"
                android:fontFamily="@font/caveat"
                android:padding="4dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_contact"
                android:layout_marginStart="4dp"
                android:tint="#800080"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>